<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.6.0:exec</goal>
            </goals>
            <properties>
                <exec.args>--add-opens=javafx.graphics/javafx.css=de.jensd.fx.fontawesomefx.commons --add-opens=javafx.graphics/javafx.scene=org.controlsfx.controls --module-path ${project.build.directory}/modules --module ${moduleName}/${mainClass}</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.5.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-agentlib:jdwp=transport=dt_socket,server=n,address=${jpda.address} --add-opens=javafx.graphics/javafx.css=de.jensd.fx.fontawesomefx.commons --add-opens=javafx.graphics/javafx.scene=org.controlsfx.controls --module-path ${project.build.directory}/modules --module ${moduleName}/${mainClass}</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-create-native-image</actionName>
            <displayName>create-native-image</displayName>
            <goals>
                <goal>clean</goal>
                <goal>compile</goal>
                <goal>package</goal>
                
            </goals>
            <activatedProfiles>
                <activatedProfile>package</activatedProfile>
            </activatedProfiles>
        </action>
        <action>
            <actionName>CUSTOM-graalvm</actionName>
            <displayName>graalvm</displayName>
            <goals>
                <goal>client:build</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-graalvm package</actionName>
            <displayName>graalvm package</displayName>
            <goals>
                <goal>client:package</goal>
            </goals>
            <activatedProfiles>
                <activatedProfile>package</activatedProfile>
            </activatedProfiles>
        </action>
        
    </actions>
